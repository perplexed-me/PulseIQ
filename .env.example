# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env files with real secrets to version control

# PostgreSQL credentials
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/pulseiq_db?currentSchema=pulseiq
SPRING_DATASOURCE_USERNAME=pulseiq_user
SPRING_DATASOURCE_PASSWORD=your_secure_password_here

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# Firebase configuration
FIREBASE_ENABLED=true
# FIREBASE_JSON should contain your complete Firebase service account JSON
# For production, use GitHub secrets to inject this value
FIREBASE_JSON=your_firebase_service_account_json_here
